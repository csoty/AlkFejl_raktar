{% extends 'master' %}
{% block listActive %}
active
{% endblock %}

{% block content %}
  <div class="well">
    <h2> Raktárkészlet: </h2>
    <table class="table table-striped table-hover" style="table-layout: fixed">
        <thead>
            <tr>
                <th>#</th>
                <th>Megnevezés</th>
                <th>Leírás</th>
                <th>Darabszám</th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
            <tr style="height: 80;">
                <td>{{ item.id }}</td>
                <td>{{ item.name }}</td>
                <td style="word-wrap: break-word;">{{ item.desc }}</td>
                <td>{{ item.qty }} db</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
  </div>
{% endblock %}
