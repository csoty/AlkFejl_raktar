{% extends 'master' %}

{% block loginActive %}
    active
{% endblock %}

{% block content %}
{% if currentUser %}
    <div class="panel panel-warning">
        <div class="panel-heading">
            <h3 class="panel-title"> Már be van jelentkezve!</h3>
        </div>
        <div class="panel-body">
            <form class="form-horizontal" method="post" action="/logout">
            {{ csrfField }}
            <div class="form-group">
                <div class="col-lg-10">
                    <button type="submit" class="btn btn-default">Kijelentkezés</button>
                </div>
            </div>
            </form>
        </div>
    </div>
{% else %}
        
    <h2> Bejelentkezés </h2>

    {% if old('errors') %}
    <div class="panel panel-danger">
    <div class="panel-heading">
        <h3 class="panel-title">Hibalista</h3>
    </div>
    <div class="panel-body">
        <ul>
            {% for error in old('errors') %}
            <li>{{ error.message }}</li>
            {% endfor %}
        </ul>
    </div>
    </div>
    {% endif %}

    <form class="form-horizontal" method="post" action="">
    {{ csrfField }}
    <div class="form-group">
        <label for="email" class="col-lg-2 control-label">E-mail:</label>
        <div class="col-lg-10">
            <input  type="email" class="form-control" id="email" name="email" placeholder="E-mail"
                    value="{{ old('email') }}">
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="col-lg-2 control-label">Jelszó:</label>
        <div class="col-lg-10">
            <input  type="password" class="form-control" id="password" name="password" placeholder="Jelszó">
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
            <button type="submit" class="btn btn-primary"> Bejelentkezés </button>
            <button type="reset" class="btn btn-default"> Mégse </button>
        </div>
    </div>
    </form>
{% endif %}
{% endblock %}