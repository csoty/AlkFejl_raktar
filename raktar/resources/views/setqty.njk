{% extends 'master' %}
{% block dropdownActive %}
active
{% endblock %}
{% block content %}
    <h2> Bevételezés </h2>

    {% if currentUser %}
    <form class="form-horizontal" method="post" action="/updQ">
        {{ csrfField }}
        <fieldset>
            <legend>Bevételezés adott cikkhez:</legend>
            <div class="form-group">
                <label for="cikkselector" class="col-lg-2 control-label">Választott cikk</label>
                <div class="col-lg-10">
                <input type="hidden" name="id" value="{{ item.id }}">
                    <p>{{ item.id }}: {{ item.name }}</p>
                </div>
            </div>
            <div class="form-group">
                <label for="setQty" class="col-lg-2 control-label"> Bevételezni kívánt mennyiség:</label>
                <div class="col-lg-10">
                    <input type="number" id="setQty" name="qtyToAdd" placeholder="0">
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button type="submit" class="btn btn-primary">Bevételezés</button>
                    <button type="button" onclick="history.go(-1);" class="btn btn-default">Vissza</button>
                </div>
            <div>
        </fieldset>
    </form>
    {% else %}
    <div class="panel panel-warning">
        <div class="panel-heading">
            <h3 class="panel-title"> Jogosultság szükséges</h3>
        </div>
        <div class="panel-body">
            <p><a href="/login" class="btn btn-primary">Bejelentkezés</a> VAGY <a  href="/register" class="btn btn-success">Regisztráció</a></p>
        </div>
    </div>
    {% endif %}
{% endblock %}